<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fcfcfc"
    >

    <LinearLayout
        android:id="@+id/llRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_11"
        >


        <!--左边logo-->
        <ImageView
            android:id="@+id/list_Item_left_icon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:scaleType="fitXY"
            />

        <!--中间文字-->
        <TextView
            android:id="@+id/list_item_left_text"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="#000"
            />

        <!--item中间部分输入框（有则显示，默认隐藏）-->
        <EditText
            android:id="@+id/list_item_edit"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:lines="1"
            android:maxLines="1"
            android:textSize="@dimen/sp_14"
            />

        <!--item右边的文字-->
        <TextView
            android:id="@+id/list_item_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            />

        <!--item右边的icon 默认是箭头-->
        <ImageView
            android:id="@+id/list_item_right_icon"
            android:layout_width="@dimen/dp_18"
            android:layout_height="match_parent"
            android:src="@drawable/right_flag"
            android:scaleType="fitXY"
            />

    </LinearLayout>



</LinearLayout>